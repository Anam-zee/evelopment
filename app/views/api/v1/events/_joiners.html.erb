<div class='flex'>
  <div class='mt-3 flex items-center -space-x-4 overflow-hidden mb-5 ml-2'>
    <% joiners&.limit(5).each do |joiner| %>
      <%= user_avatar_with_initials(joiner.name) %>
    <% end %>
  </div>
  <% if joiners.count > 5 %>
  <div class='flex justify-center items-center text-grey'>
    <p> +<%= (joiners.count - 5) %></p>
  </div>
  <% end %>
</div>
